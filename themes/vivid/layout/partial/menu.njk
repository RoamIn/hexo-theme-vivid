<div id="J_Menu" class="menu">
    <button id="J_MenuSwitch" class="switch"><i class="icon">
            <svg viewBox="0 0 20 20" preserveAspectRatio="xMidYMid meet"
                 style="pointer-events: none; display: block; width: 100%; height: 100%;">
                <g>
                    <rect x="2" y="4" width="16" height="2"></rect>
                    <rect x="2" y="9" width="16" height="2"></rect>
                    <rect x="2" y="14" width="16" height="2"></rect>
                </g>
            </svg>
        </i></button>

    <div class="drawer">
        <nav class="menu-nav">
            {% for link, path in theme.menu %}
                {{ link_to(path, link, { class: 'nav-item' }) }}
            {% endfor %}
        </nav>
    </div>
    <div id="J_Backdrop" class="backdrop"></div>
</div>